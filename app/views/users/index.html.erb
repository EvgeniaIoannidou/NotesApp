<div class="container">
  <div class="page-header">
    <h1>Users</h1>
    <% if current_user.admin? %>
      <h4><span class="label label-primary">List of all users</span></h4>
    <% else %>
      <h4><span class="label label-primary">Your profile information</span></h4>
    <% end %>
  </div>
</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <% if current_user.admin? %>
          <th class="text-center">Admin</th>
        <% end %>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <% if current_user.admin? %>
            <td><%= user.admin? ? "Yes" : "No" %></td>
          <% end %>
          <td class="text-center">
            <%= link_to "Show", user_path(user), class: 'btn btn-info' %>
            <% if current_user.admin? %>
              <%= link_to "Edit", edit_user_path(user), class: 'btn btn-success' %>
              <%= button_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New user", new_user_path, class: 'btn btn-primary' %>

